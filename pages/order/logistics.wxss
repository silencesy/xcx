/* pages/order/logistics.wxss */
.no-logistics {
  margin-top: 50%;
  text-align: center;
  color: #777;
}
.logistics {
  padding: 20rpx;
}
.title-info {
  border: 1px solid #dfdfdf;
  border-radius: 4px;
  padding: 20rpx;
  color: #444;
}
.list {
  padding: 20rpx;
  border: 1px solid #dfdfdf;
  margin-top: 20rpx;
  border-radius: 4px;
}
.list .item {
  display: flex;
}
.list .item .iconfont {
  width: 50rpx;
}
.list .item .remark-info {
  width: 620rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #dfdfdf;
  padding: 20rpx 0;
}
.list .item:last-child .remark-info {
  border-bottom: none;
}
.list .item .remark-info > view:first-child {
  color: #444;
  word-wrap: break-word;
}
.list .item .remark-info > view:nth-child(2) {
  text-align: right;
  color: #aaa;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.item image {
  width: 32rpx;
  height: 32rpx;
  margin-top: 26rpx;
  margin-right: 18rpx;
}
.iconfont.icon-dot {
  color: #dfdfdf;
  margin-top: 26rpx;
}