/* pages/order/order-details.wxss */
page {
  background-color: #eee;
  padding-bottom: 100rpx;
}
.container {
  padding: 20rpx;
}
.top-info {
  border: 1px solid #dfdfdf;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fff;
}
.title {
  display: flex;
  align-items: center;
}
.title .iconfont {
  margin-right: 15rpx;
}
.text-info {
  font-size: 28rpx;
}
.address {
  border: 1px solid #dfdfdf;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.addr-user-info {
  display: flex;
}
.addr-user-info > view:first-child {
  margin-right: 20rpx;
}
.addr-info {
  color: #666;
}
.iconfont.icon-shanghu1 {
  color: #999;
}
.total-price {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #dfdfdf;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.order-number {
  padding: 20rpx;
  border: 1px solid #dfdfdf;
  border-radius: 8rpx;
  background-color: #ffff;
  margin-top: 20rpx;
}
.order-number .info {
  color: #666;
}
.order-number {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-number .copy-btn {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 40rpx;
  border: 1px solid #dfdfdf;
  color: #666;
}
.pay-row {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #fff;
}
.pay-row .pay-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  background-color: #F9421E;
  color: #fff;
  text-align: center;
  border-radius: 30rpx;
}
.qr {
  display: flex;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1px solid #dfdfdf;
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.qr > view:nth-child(1) {
  flex: 3;
  align-self: center;
}
.qr > view:nth-child(2) {
  flex: 1;
  align-self: center;
  text-align: right;
}
.qr > view:nth-child(2) image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 10rpx;
}