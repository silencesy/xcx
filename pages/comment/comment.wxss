/* pages/comment/comment.wxss */
page {
  background-color: #eee;
}
.container {
  padding: 20rpx;
}
.container .title {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
}
.item-shop {
  border-radius: 8rpx;
  border: 1rpx solid #dfdfdf;
  overflow: hidden;
}
.iconfont.icon-shanghu1 {
  color: #999;
}
.container .title .shop-name {
  color: #666;
  margin-left: 20rpx;
}
.content {
  background-color: #F9F9F9;
  padding: 20rpx;
}
.content .info-box {
  display: flex;
  
}
.content image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
}
.content .info {
  width: 510rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content .goods-name {
  word-break:break-all;
}
.content  .bottom {
  display: flex;
  justify-content: space-between;
}
.content  .bottom .price {
  color: #f24827;
}
.content .type text {
  color: #999;
  font-size: 28rpx;
}
.reviews-content {
  padding: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #dfdfdf;
  background-color: #fff;
  margin-top: 20rpx;
}
.reviews-content .reviews-title {
  border-bottom: 1rpx solid #dfdfdf;
  padding-bottom: 20rpx;
}
.reviews-content textarea {
  margin-top: 20rpx;
  font-size: 25rpx;
  width: 100%;
  height: 260rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.img-box {
  padding-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.img-box .img-item {
  width: 120rpx;
  line-height: 120rpx;
  height: 120rpx;
  background-color: #eee;
  text-align: center;
  color: #fff;
  margin-right: 17rpx;
  margin-bottom: 17rpx;
  position: relative;
}
.img-box .img-item:nth-child(5n) {
  margin-right: 0;
}
.img-box .img-item .delete {
  position: absolute;
  right: 5rpx;
  top: -34%;
  z-index: 10;
}
.img-box .img-item image {
  width: 120rpx;
  height: 120rpx;
}
.tip-info {
  color: #999;
  font-size: 14px;
}
.submit-btn {
  color: #fff;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 710rpx;
  border-radius: 46rpx;
  background-color: #f9421e;
  position: fixed;
  top: auto;
  left: 0;
  right: 0;
  bottom: 20rpx;
  margin: auto;
}